@model JobFinder.Web.Areas.Company.Models.BussinessCardViewModels.BussinessCardViewModel
@{
    bool showEdit = TempData["showEditBtn"] != null ? (bool)TempData["showEditBtn"] : true;
}

<div id="business-card-container" class="row">
    <div class="default-panel panel panel-primary col-lg-6">
        <div class="panel-heading">
            <h3 class="panel-title">Bussiness Card</h3>
        </div>
        <div class="panel-body">
            <h4><span class="text-default">Company name: </span><span class="text-muted"> @Model.CompanyName</span></h4>
            @if (!String.IsNullOrEmpty(Model.AboutUs))
            {
                <p><span class="text-default">About us: </span><span class="text-muted"> @Model.AboutUs</span></p>
            }
            @if (!String.IsNullOrEmpty(Model.Address))
            {
                <p><span class="text-default">Address: </span><span class="text-muted"> @Model.Address</span></p>
            }
            @if (!String.IsNullOrEmpty(Model.WebSite))
            {
                <p><span class="text-default">Website: </span><span class="text-muted"><a href="@Model.WebSite" target="_blank">@Model.WebSite</a></span></p>
            }
            <p>
                <span class="text-default">Bussiness sectors: </span><span class="text-muted"> @String.Join(", ", @Model.BusinessSectors.Select(b => b.Text))</span>
            </p>
            @if (showEdit)
            {
                <p>
                    <button id="editButton" class="btn btn-primary pull-right">Edit</button>
                </p>
            }
        </div>
    </div>
</div>
