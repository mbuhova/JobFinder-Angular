@model PagedList.IPagedList<JobFinder.Web.Models.OfferViewModels.SearchResultOfferViewModel>
@{
    ViewBag.Title = "GetFollowedOffers";
}
@if (Model.Count == 0)
{
    <h3>No offers found.</h3>
}
<div class="default-form">
    <h4>My followed offers</h4>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                @Html.DisplayFor(m => item)
            </li>
        }
    </ul>
</div>
@section pager{
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("GetFollowedOffers", new { page }))
}
